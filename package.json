    "express": "^4.13.3",
    "gulp-uglify": "^1.4.0",
    "jsonwebtoken": "^5.0.4",
    "lodash": "^3.10.1",
    "moment": "^2.12.0",
    "mongoose": "^4.1.3",
    "mongoose-auto-increment": "^5.0.1",
